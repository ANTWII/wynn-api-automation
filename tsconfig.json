{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@auth/*": ["./auth/*"],
      "@config/*": ["./config/*"],
      "@constants/*": ["./constants/*"],
      "@helper/*": ["./helper/*"],
      "@requests/*": ["./requests/*"],
      "@schemes/*": ["./schemes/*"],
      "@services/*": ["./services/*"],
      "@testData/*": ["./testData/*"],
      "@types/*": ["./types/*"],
      "@utils/*": ["./utils/*"]
    },
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test-results",
    "playwright-report"
  ]
}
